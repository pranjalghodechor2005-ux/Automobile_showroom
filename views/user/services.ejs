<!-- SOME 2nd SECTION (could be intro / text / whatever you want) -->
<section class="py-5 bg-light text-center">
  <div class="container">
      <h2>Welcome to Cardan Auto Services</h2>
      <p>We provide the best auto services for all types of cars.</p>
  </div>
</section>

<!-- 3rd Section: Services / Cars -->
<section class="py-5">
  <div class="container">
    <div class="row">
      <% cars.forEach(car => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <img src="/images/<%= car.car_image %>" class="card-img-top" alt="<%= car.car_name %>">
            <div class="card-body">
              <h5 class="card-title"><%= car.car_name %></h5>
              <p class="card-text"><strong>Model:</strong> <%= car.car_model %></p>
              <p class="card-text text-success"><strong>Price:</strong> ‚Çπ <%= parseFloat(car.car_price).toLocaleString('en-IN') %></p>

              <!-- Place Order Form -->
              <form method="POST" action="/place_order">
                <input type="hidden" name="car_name" value="<%= car.car_name %>">
                <div class="mb-2">
                  <input type="text" name="name" class="form-control" placeholder="Your Name" required>
                </div>
                <div class="mb-2">
                  <input type="text" name="mobile" class="form-control" placeholder="Mobile Number" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Book / Enquire</button>
              </form>

            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>



