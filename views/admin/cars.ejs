<%- include('navbar') %>

<div class="content">
    <!-- ADD CAR FORM -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
           <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Car</h4>
        </div>
        <div class="card-body">
<form method="POST" action="/admin/save_car" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="car_name" class="form-label">Car Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="car_name" name="car_name" placeholder="Enter car name" required>
                    </div>
                    <div class="col-md-6">
                        <label for="car_model" class="form-label">Car Model <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="car_model" name="car_model" placeholder="Enter car model" required>
                    </div>
                    <div class="col-md-6">
                        <label for="car_price" class="form-label">Car Price (₹) <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="car_price" name="car_price" placeholder="Enter car price" min="0" step="0.01" required>
                    </div>
                    <div class="col-md-6">
                        <label for="car_image" class="form-label">Image Name <span class="text-danger">*</span></label>
                        <input type="file" class="form-control" id="car_image" name="car_image" placeholder="e.g., car1.jpg" required>
                        <small class="form-text text-muted">Enter image filename (e.g., car1.jpg)</small>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Save Car
                        </button>
                        <button type="reset" class="btn btn-secondary btn-lg ms-2">
                            <i class="bi bi-arrow-counterclockwise"></i> Reset
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- CARS LIST -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0"><i class="bi bi-list-ul"></i> Cars List</h4>
        </div>
        <div class="card-body">
            <% if (cars && cars.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Model</th>
                                <th scope="col">Price</th>
                                <th scope="col">Image</th>
                                <th scope="col">Actions</th> 
                            </tr>
                        </thead>
                        <tbody>
                            <% cars.forEach(function(c, index){ %>
                                <tr>
                                    <th scope="row"><%= index + 1 %></th>
                                    <td><strong><%= c.car_name %></strong></td>
                                    <td><span class="badge bg-info"><%= c.car_model %></span></td>
                                    <td><strong class="text-success">₹ <%= parseFloat(c.car_price).toLocaleString('en-IN') %></strong></td>
                                    <td>
                                        <img src="/images/<%= c.car_image %>" width="100" class="rounded">

                                    </td>
                                     <td>
                                    <!-- Edit Button -->
                                    <a href="/admin/edit_car/<%= c.id %>" class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <!-- Delete Button -->
                                    <a href="/admin/delete_car/<%= c.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this car?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-info-circle"></i> No cars found. Please add a car using the form above.
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('footer') %>
