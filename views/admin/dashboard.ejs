<%- include('navbar') %>

<div class="content">

    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- ================= STATS CARDS ================= -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow text-center p-3">
                <i class="bi bi-car-front-fill fs-1 text-primary"></i>
                <h5>Total Cars</h5>
                <h3><%= cars %></h3>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow text-center p-3">
                <i class="bi bi-receipt fs-1 text-success"></i>
                <h5>Service Orders</h5>
                <h3><%= orders %></h3>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow text-center p-3">
                <i class="bi bi-people-fill fs-1 text-warning"></i>
                <h5>Customers</h5>
                <h3><%= customers %></h3>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow text-center p-3">
                <i class="bi bi-envelope-fill fs-1 text-danger"></i>
                <h5>Contact Requests</h5>
                <h3><%= messages %></h3>
            </div>
        </div>
    </div>

    <!-- ================= RECENT ORDERS ================= -->
    <div class="card shadow mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Service Orders</h5>
        </div>
        <div class="card-body">
            <% if(recentOrders.length > 0){ %>
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Customer</th>
                            <th>Mobile</th>
                            <th>Service</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% recentOrders.forEach((o,i)=>{ %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= o.name %></td>
                            <td><%= o.mobile %></td>
                            <td><%= o.service %></td>
                            <td><%= new Date(o.created_at).toLocaleString() %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="alert alert-info text-center">No recent orders found.</div>
            <% } %>
        </div>
    </div>

</div>

<%- include('footer') %>
