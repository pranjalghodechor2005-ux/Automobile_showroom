<!DOCTYPE html>
<html>
<head>
<title>Blog Management</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
.blog-img{
    width:80px;
    height:60px;
    object-fit:cover;
    border-radius:5px;
}
.content {
    margin-left: 220px;
    padding: 2rem;
}

</style>

</head>
<body>

<div class="content">

<div class="container mt-4">

<!-- ================= ADD BLOG FORM ================= -->
<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h5>Add New Blog</h5>
    </div>

    <div class="card-body">
        <form method="POST" action="/admin/save_blog" enctype="multipart/form-data">

            <label>Blog Title</label>
            <input class="form-control mb-2" name="blog_title" required>

            <label>Slug</label>
            <input class="form-control mb-2" name="blog_slug">

            <label>Short Description</label>
            <textarea class="form-control mb-2" name="blog_short_desc"></textarea>

            <label>Full Content</label>
            <textarea class="form-control mb-2" name="blog_content"></textarea>

            <label>Blog Image</label>
            <input type="file" class="form-control mb-2" name="blog_image" required>

            <label>Author Name</label>
            <input class="form-control mb-2" name="blog_author">

            <label>Category</label>
            <input class="form-control mb-2" name="blog_category">

            <label>Tags</label>
            <input class="form-control mb-3" name="blog_tags">

            <button class="btn btn-success w-100">Save Blog</button>
        </form>
    </div>
</div>

<!-- ================= BLOG LIST TABLE ================= -->
<div class="card shadow">
    <div class="card-header bg-dark text-white">
        <h5>Blog List</h5>
    </div>

    <div class="card-body">
        <table class="table table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach(b => { %>
                <tr>
                    <td><%= b.blog_id %></td>
                    <td>
                        <b><%= b.title %></b><br>
                        <small><%= b.blog_short_desc %></small>
                    </td>
                    <td>
                        <img src="/images/<%= b.img %>" class="blog-img">
                    </td>
                    <td><%= b.category %></td>
                    <td>
                       <a href="/admin/edit_blog/<%= b.blog_id %>" class="btn btn-primary">Edit</a>
                       <a href="/admin/delete_blog/<%= b.blog_id %>" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

</div>
</div>


</body>
</html>
