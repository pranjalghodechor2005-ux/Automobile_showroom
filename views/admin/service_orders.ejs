<%- include('navbar') %>

<div class="content">
    <!-- ADD SERVICE ORDER FORM -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
           <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Service Order</h4>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/add_service_order" enctype="multipart/form-data">
                <div class="row g-3">

                    <div class="col-md-3">
                        <label for="name" class="form-label">Customer Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter customer name" required>
                    </div>

                    <div class="col-md-3">
                        <label for="mobile" class="form-label">Mobile <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Enter mobile number" required>
                    </div>

                    <div class="col-md-3">
                        <label for="service" class="form-label">Service <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="service" name="service" placeholder="Enter service type" required>
                    </div>

                    <div class="col-md-3">
                        <label for="order_image" class="form-label">Image</label>
                        <input type="file" class="form-control" id="order_image" name="order_image" accept="image/*">
                        <small class="text-muted">Optional</small>
                    </div>

                    <div class="col-12 mt-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Save Order
                        </button>
                        <button type="reset" class="btn btn-secondary btn-lg ms-2">
                            <i class="bi bi-arrow-counterclockwise"></i> Reset
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <!-- SERVICE ORDERS LIST -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0"><i class="bi bi-list-ul"></i> Service Orders List</h4>
        </div>
        <div class="card-body">
            <% if (orders && orders.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Customer Name</th>
                                <th scope="col">Mobile</th>
                                <th scope="col">Service</th>
                                <th scope="col">Image</th>
                                <th scope="col">Date</th>
                                <th scope="col">Actions</th> 
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(function(o, index){ %>
                                <tr>
                                    <th scope="row"><%= index + 1 %></th>
                                    <td><strong><%= o.name %></strong></td>
                                    <td><%= o.mobile %></td>
                                    <td><span class="badge bg-info text-dark"><%= o.service %></span></td>
                                    <td>
                                       <% if(o.order_image){ %>
                             <img src="/images/<%= o.order_image %>" width="100" class="rounded">
                                    <% } %>

                                    </td>
                                    <td><%= new Date(o.created_at).toLocaleString() %></td>
                                    <td>
                                        <!-- Edit Button -->
                                        <a href="/admin/edit_service_order/<%= o.id %>" class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <!-- Delete Button -->
                                        <form method="POST" action="/admin/delete_service_order/<%= o.id %>" style="display:inline-block">
                                            <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-info-circle"></i> No service orders found. Please add an order using the form above.
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('footer') %>
