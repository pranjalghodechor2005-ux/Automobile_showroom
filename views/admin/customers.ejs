<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Customer Management</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
<div class="content">

<div class="container mt-5">

<h3 class="mb-4">Customer Management</h3>

<!-- ADD CUSTOMER FORM -->
<div class="card shadow mb-4">
<div class="card-header bg-primary text-white">
    Add New Customer
</div>

<div class="card-body">

<form action="/admin/save_customer" method="POST">

<div class="row">

<div class="col-md-4">
<label>Name</label>
<input class="form-control mb-2" name="name" required>
</div>

<div class="col-md-4">
<label>Mobile</label>
<input class="form-control mb-2" name="mobile" required>
</div>

<div class="col-md-4">
<label>Email</label>
<input class="form-control mb-2" name="email">
</div>

<div class="col-md-6">
<label>Address</label>
<textarea class="form-control mb-2" name="address"></textarea>
</div>

<div class="col-md-3">
<label>Enquiry Type</label>
<select class="form-control mb-2" name="enquiry_type">
<option>Test Drive</option>
<option>Booking</option>
<option>Purchase</option>
</select>
</div>

<div class="col-md-3">
<label>Car Interest</label>
<input class="form-control mb-2" name="car_interest">
</div>

</div>

<button class="btn btn-success mt-3">
Save Customer
</button>

</form>

</div>
</div>


<!-- CUSTOMER TABLE -->
<div class="card shadow">
<div class="card-header bg-dark text-white">
Customer List
</div>

<div class="card-body">

<table class="table table-bordered table-striped">
<thead class="table-dark">
<tr>
<th>#</th>
<th>Name</th>
<th>Mobile</th>
<th>Email</th>
<th>Car</th>
<th>Enquiry</th>
<th>Action</th>
</tr>
</thead>

<tbody>
<% customers.forEach((c,i)=>{ %>
<tr>
<td><%= i+1 %></td>
<td><%= c.name %></td>
<td><%= c.mobile %></td>
<td><%= c.email %></td>
<td><%= c.car_interest %></td>
<td>
<span class="badge bg-info">
<%= c.enquiry_type %>
</span>
</td>

<td>
<a href="/admin/edit_customer/<%= c.customer_id %>" 
class="btn btn-sm btn-warning">Edit</a>

<a href="/admin/delete_customer/<%= c.customer_id %>" 
onclick="return confirm('Are you sure?')"
class="btn btn-sm btn-danger">Delete</a>
</td>
</tr>
<% }) %>
</tbody>

</table>

</div>
</div>

</div>
</div>


</body>
</html>
